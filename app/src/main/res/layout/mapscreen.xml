<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileSwitcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#470002ff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GhostHunter"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textStyle="bold|normal"
                android:textColor="#ffff000b"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Lives:"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffff000b"
                android:textStyle="bold|italic" />

            <EditText
                android:layout_width="@dimen/abc_action_bar_default_height_material"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_below="@+id/textView10"
                android:layout_toRightOf="@+id/textView11"
                android:layout_alignBottom="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Kills:"
                android:id="@+id/textView12"
                android:layout_marginRight="60dp"
                android:layout_marginEnd="60dp"
                android:layout_alignTop="@+id/editText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#ffff000b"
                android:textStyle="bold|italic" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_alignTop="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginLeft="51dp"
                android:layout_marginStart="51dp"
                android:layout_alignBottom="@+id/textView12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="#ff000000"
                android:adjustViewBounds="false"
                android:background="#ff000000"
                android:paddingLeft="90dp"
                android:paddingTop="5dp"
                android:paddingRight="90dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="96dp"
                android:layout_above="@+id/imageView"
                android:layout_alignRight="@+id/textView12"
                android:layout_alignEnd="@+id/textView12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="#ff000000"
                android:adjustViewBounds="false"
                android:background="#ff000000"
                android:paddingLeft="90dp"
                android:paddingTop="5dp"
                android:paddingRight="90dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="121dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="#ff000000"
                android:adjustViewBounds="false"
                android:background="#ff000000"
                android:paddingLeft="5dp"
                android:paddingTop="40dp"
                android:paddingRight="5dp"
                android:paddingBottom="40dp"
                android:layout_marginBottom="59dp"
                android:layout_above="@+id/imageView2"
                android:layout_toRightOf="@+id/editText"
                android:layout_toEndOf="@+id/editText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="#ff000000"
                android:adjustViewBounds="false"
                android:background="#ff000000"
                android:paddingLeft="60dp"
                android:paddingTop="5dp"
                android:paddingRight="60dp"
                android:paddingBottom="5dp"
                android:layout_above="@+id/imageView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="#ff000000"
                android:adjustViewBounds="false"
                android:background="#ff000000"
                android:paddingLeft="5dp"
                android:paddingTop="40dp"
                android:paddingRight="5dp"
                android:paddingBottom="40dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="#ff000000"
                android:adjustViewBounds="false"
                android:background="#ff000000"
                android:paddingLeft="40dp"
                android:paddingTop="5dp"
                android:paddingRight="40dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/textView11"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:layout_marginTop="57dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upmovement"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:clickable="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downmovement"
                android:layout_below="@+id/upmovement"
                android:layout_centerHorizontal="true"
                android:clickable="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftmovement"
                android:layout_toLeftOf="@+id/upmovement"
                android:layout_toStartOf="@+id/upmovement"
                android:layout_alignTop="@+id/downmovement"
                android:clickable="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightmovement"
                android:layout_alignBottom="@+id/downmovement"
                android:layout_toRightOf="@+id/downmovement"
                android:layout_toEndOf="@+id/downmovement"
                android:clickable="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quitbutton"
                android:src="@android:drawable/ic_menu_revert"
                android:layout_alignBottom="@+id/leftmovement"
                android:layout_toLeftOf="@+id/imageView6"
                android:layout_toStartOf="@+id/imageView6"
                android:clickable="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@android:drawable/ic_media_pause"
                android:layout_below="@+id/imageView5"
                android:layout_alignRight="@+id/imageView4"
                android:layout_alignEnd="@+id/imageView4"
                android:clickable="true" />


        </RelativeLayout>
    </LinearLayout>
</ViewSwitcher>

